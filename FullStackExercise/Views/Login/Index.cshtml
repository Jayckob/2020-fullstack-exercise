@model FullStackExercise.Models.auth
@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = null;
}

@if (User.Identity.IsAuthenticated)
{
    <div class="row">
        You are Logged in as
        <span style="font-size:large;color:forestgreen;">
            @User.Identity.Name
        </span>
    </div>
    <a href="/Home/Index">Go to Customers Table</a>
    <div class="row" style="padding-top:50px;">
        @Html.ActionLink("Log Off", "Logoff",
        "Home", null, null)
    </div>
}
else
{

    <link href="~/css/site.css" rel="stylesheet" />
    <h1>Welcome</h1>
    <h2>Please Log in to continue to the Customers Table</h2>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4">
            <div>
                @using (Html.BeginForm("LoginUser", "Login",
            FormMethod.Post, new { role = "form" }))
                {
                    <div>
                        @Html.AntiForgeryToken()
                        <div>
                            <label>Username</label><br />
                        </div>
                        <div>
                            @Html.TextBoxFor(m => m.username,
                            new { @class = "form-control txtbox" })
                        </div>
                        <div style="padding-top:20px;"></div>
                        <div>
                            <label>Password</label><br />
                        </div>
                        <div>
                            @Html.PasswordFor(m => m.password,
                            new { @class = "form-control txtbox" })
                        </div>
                    </div>
                    <div class="padding-left:35%;width:40%;">
                        <div class="padding-top:20px;">
                            <input class="btn btn-primary
                            btn-lg rph-login-button"
                                   type="submit" value="Login" />
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}